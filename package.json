{
  "name": "admin-next",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "prepare": "npx husky install",
    "lint": "eslint",
    "test": "playwright test",
    "test:unit": "playwright test --project=unit --project=api",
    "test:server": "playwright test --project=component --project=pages --project=integration",
    "test:e2e": "playwright test --project=e2e",
    "test:perf": "playwright test --project=performance",
    "test:all": "playwright test",
    "test:coverage": "nyc playwright test",
    "test:coverage:unit": "nyc --check-coverage playwright test --project=unit --project=api",
    "test:prod": "cross-env TEST_ENV=production npx playwright test",
    "lh:home": "npx lighthouse http://localhost:3000/es --output=json --output=html --output-path=./docs/lighthouse-reports/home.html --chrome-flags='--headless' --no-enable-error-reporting",
    "lhci:perf": "lhci autorun --config=lighthouserc.perf.json",
    "perf": "npm run lhci:perf",
    "perf:check": "node scripts/check-perf-thresholds.js"
  },
